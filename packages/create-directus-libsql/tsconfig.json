{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,

    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],

    "noImplicitAny": true,
    "noImplicitThis": true,

    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "moduleResolution": "NodeNext",


    "outDir": "bin"
  },
  "include": ["src/**/*"]
}
